    <menuitem id="menu_my_quick_tasks"
              name="My Quick Tasks"
              parent="menu_restaurant_tasks_root"
              action="action_my_quick_tasks"
              sequence="12"
              groups="restaurant_task_manager.group_task_staff"/>

    <!-- ═══ TASK MANAGEMENT (Manager + above) ═══ -->
