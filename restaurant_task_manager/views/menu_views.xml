              name="Configuration"
              parent="menu_restaurant_tasks_root"
              sequence="90"
              groups="restaurant_task_manager.group_task_admin"/>

    <menuitem id="menu_task_templates"
              name="Task Templates"
              parent="menu_configuration"
              action="action_task_list_template"
              sequence="10"/>

